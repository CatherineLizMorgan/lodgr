# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/lodgr?schema=public"

# JWT Configuration
JWT_SECRET="your-secret-key-change-this-in-production"
JWT_EXPIRATION="7d"

# API Configuration
PORT=3001
NODE_ENV="development"

# Stripe Payment Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Map API Configuration (Choose one or both)
MAPBOX_API_KEY="your_mapbox_api_key"
GOOGLE_MAPS_API_KEY="your_google_maps_api_key"

# Cloud Storage Configuration (AWS S3 or similar)
STORAGE_BUCKET="lodgr-uploads"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"

# Email Configuration (SendGrid, AWS SES, etc.)
EMAIL_PROVIDER="sendgrid"
SENDGRID_API_KEY="your_sendgrid_api_key"
FROM_EMAIL="noreply@lodgr.com"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# Redis Configuration (for caching, optional)
REDIS_URL="redis://localhost:6379"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
